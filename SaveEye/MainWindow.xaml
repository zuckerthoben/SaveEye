<Window x:Class="SaveEye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:p="clr-namespace:SaveEye.Properties"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:saveeye="clr-namespace:SaveEye"
        Title="SaveEye" Height="300" Width="300" Visibility="Hidden" Closing="Window_Closing" Icon="Resources/iconSmall.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="_SettingsTextBlock" FontFamily="Segoe UI" FontSize="30" HorizontalAlignment="Center" Margin="5" Text="Settings"></TextBlock>

        <CheckBox x:Name="_StartWithWindowsCheckBox" Content="Start with Windows" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Margin="10,0" Grid.Row="1" Checked="_StartWithWindowsCheckBox_Checked" Unchecked="_StartWithWindowsCheckBox_Unchecked"></CheckBox>

        <Button x:Name="_SaveButton" Grid.Row="5" Grid.Column="1" Margin="20" FontSize="14" Click="_SaveButton_Click" Content="Save and close"></Button>
    </Grid>
</Window>
